<%= form_for @list, :html => { :class => "form-inline" } do |f| %>
  <% if @list.errors.any? %>
    <div class="alert alert-error">
      <ul>
      <% @list.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
	<% end %>
	
	<fieldset>
		<div class="control-group">
			<div class="controls">
				<%= f.text_field :name, :placeholder => "List name" %>
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<%= f.submit :class => "btn" %>
			</div>
		</div>
	</fieldset>

<% end %>
