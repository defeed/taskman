<%= form_for @user, :html => { :class => "form-vertical" } do |f| %>
<% if @user.errors.any? %>
  <div class="alert alert-error">
		<a class="close" data-dismiss="alert" href="#">Ã—</a>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

	<fieldset>
		<div class="control-group">
			<%= f.label :name, "Full name", :class => "control-label" %>
			<div class="controls">
				<%= f.text_field :name %>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :username, "Pick a username", :class => "control-label" %>
			<div class="controls">
				<%= f.text_field :username %>
			</div>
		</div>
		
		<div class="control-group">
	  	<%= f.label :password, :class => "control-label" %>
	  	<div class="controls">
	  		<%= f.password_field :password, :class => "input-large" %>
	  	</div>
		</div>
		
		<div class="control-group">
	  	<%= f.label :password_confirmation, :class => "control-label" %>
	  	<div class="controls">
	  		<%= f.password_field :password_confirmation, :class => "input-large" %>
	  	</div>
		</div>
		
		<div class="control-group">
	  	<div class="controls">
	  		<%= f.submit "Register", :class => "btn" %>
				<%= link_to "Already registered? Login here", login_url %>
	  	</div>
		</div>
	</fieldset>

<% end %>
